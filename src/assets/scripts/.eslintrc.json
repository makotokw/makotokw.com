{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "airbnb-base",
    "plugin:vue/essential"
  ],
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "rules": {
    "class-methods-use-this": "off",
    "max-len": "off",
    "no-empty": ["error", { "allowEmptyCatch": true }],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "import/extensions": ["error", "always", {
      "js": "never",
      "vue": "never"
    }]
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "build/webpack.dev.js"
      }
    }
  }
}
