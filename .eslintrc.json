{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017
  },
  "rules": {
    "func-names": ["error", "never"],
    "global-require": "off",
    "import/no-extraneous-dependencies": "off",
    "import/no-dynamic-require": "off",
    "max-len": "off",
    "no-console": "off",
    "no-unused-vars": ["error", { "args": "none" }],
    "object-shorthand": "off",
    "prefer-arrow-callback": "off"
  }
}
